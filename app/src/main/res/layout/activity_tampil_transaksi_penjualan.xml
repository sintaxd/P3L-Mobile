<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".View.CustomerService.TransaksiPenjualan.tampil_transaksi_penjualan">
    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/textView_statusTransaksi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pilih Status Transaksi"
            android:textColor="@color/menusCS" />

        <Spinner
            android:id="@+id/spinner_status_transaksi"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:entries="@array/sortByStatusTransaksi"
            android:spinnerMode="dropdown" />
    </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view_transaksi_penjualan"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="20dp"
        android:scrollbars="vertical" />

</LinearLayout>
</LinearLayout>