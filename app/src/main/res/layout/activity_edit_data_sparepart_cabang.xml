<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".tambah_data_sparepart_cabang">

    <TextView
        android:id="@+id/textView_Judul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:text="Edit Sparepart Cabang"
        android:textAlignment="center"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textView_cabang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cabang"/>

    <Spinner
        android:id="@+id/spinner_cabang"
        android:layout_width="170dp"
        android:layout_height="27dp"
        android:layout_marginEnd="37dp"
        android:entries="@array/cabang_sparepartCabang"
        android:spinnerMode="dropdown"/>

    <TextView
        android:id="@+id/textView_namaSparepart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nama Sparepart" />

    <Spinner
        android:id="@+id/spinner_namaSparepart"
        android:layout_width="170dp"
        android:layout_height="27dp"
        android:layout_marginEnd="37dp"
        android:entries="@array/namasparepart_sparepartCabang"
        android:spinnerMode="dropdown"/>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/text_input_hargaBeli"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:counterEnabled="true"
        app:counterMaxLength="9"
        app:errorEnabled="true">

        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Harga Beli"
            android:inputType="number" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/text_input_hargaJual"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:counterEnabled="true"
        app:counterMaxLength="7"
        app:errorEnabled="true">

        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Harga Jual"
            android:inputType="number" />
    </android.support.design.widget.TextInputLayout>

    <TextView
        android:id="@+id/textView_letakPenempatan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Letak Penempatan" />

    <Spinner
        android:id="@+id/spinner_letakPenempatan"
        android:layout_width="170dp"
        android:layout_height="27dp"
        android:layout_marginEnd="37dp"
        android:entries="@array/letaksparepart_sparepartCabang"
        android:spinnerMode="dropdown"/>

    <TextView
        android:id="@+id/textView_ruangPenempatan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ruang Penempatan" />

    <Spinner
        android:id="@+id/spinner_ruangPenempatan"
        android:layout_width="170dp"
        android:layout_height="27dp"
        android:layout_marginEnd="37dp"
        android:entries="@array/ruangpenempatan_sparepartCabang"
        android:spinnerMode="dropdown"/>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/text_input_stokMinimal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:counterEnabled="true"
        app:counterMaxLength="4"
        app:errorEnabled="true">

        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Stok Minimal"
            android:inputType="number" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/text_input_stokSisa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:counterEnabled="true"
        app:counterMaxLength="4"
        app:errorEnabled="true">

        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Stok Sisa"
            android:inputType="number" />
    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/button_simpan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="15dp"
        android:text="SIMPAN"
        android:textSize="12sp" />

    <Button
        android:id="@+id/button_Batal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="BATAL"
        android:textSize="12sp"
        android:layout_marginBottom="10dp"
        />
    <Button
        android:id="@+id/button_Hapus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="HAPUS"
        android:textSize="12sp"
        android:background="#FFA07A"/>

</LinearLayout>
